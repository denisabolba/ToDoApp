<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">

    <LinearLayout

        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160mdp"
        android:orientation="horizontal"
        android:background="@android:color/holo_orange_dark">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_25mdp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>


        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10mdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your name"
                android:textSize="@dimen/_18font_mdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textSize="@dimen/_16font_mdp"
                android:textColor="@color/black" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10mdp"
        android:orientation="vertical"
        android:layout_below="@+id/linear">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/uploadYourGrage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40mdp"
            app:cardCornerRadius="@dimen/_5mdp"
            android:layout_margin="@dimen/_5mdp"
            app:cardElevation="@dimen/_2mdp"
            android:focusable="true"
            android:clickable="true"
            android:elevation="@dimen/_2mdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    android:src="@drawable/upload_24"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Your Grages"
                    android:layout_toEndOf="@+id/icon1"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="@dimen/_18font_mdp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_5mdp"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40mdp"
            app:cardCornerRadius="@dimen/_5mdp"
            android:layout_margin="@dimen/_5mdp"
            app:cardElevation="@dimen/_2mdp"
            android:focusable="true"
            android:clickable="true"
            android:elevation="@dimen/_2mdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    android:src="@drawable/upload_24"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and conditions"
                    android:layout_toEndOf="@+id/icon2"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="@dimen/_18font_mdp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_5mdp"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40mdp"
            app:cardCornerRadius="@dimen/_5mdp"
            android:layout_margin="@dimen/_5mdp"
            app:cardElevation="@dimen/_2mdp"
            android:focusable="true"
            android:clickable="true"
            android:elevation="@dimen/_2mdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5mdp">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    android:src="@drawable/upload_24"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:layout_toEndOf="@+id/icon3"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="@dimen/_18font_mdp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_5mdp"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>




    </LinearLayout>


</RelativeLayout>